<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?> <!-- Import HBox -->
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<VBox xmlns:fx="http://javafx.com/fxml" alignment="CENTER" fx:id="vBox" spacing="10">
    <HBox alignment="CENTER" style="-fx-background-color: black">
        <ImageView>
            <Image url="/img/logoSpotify2_1.png"/>
        </ImageView>
    </HBox>
    <!-- Wrap the buttons in an HBox -->
    <HBox spacing="10" alignment="CENTER">
        <Button text="Back" onAction="#handleCancelButton" />
        <Button text="New" onAction="#handleNewButton" fx:id="newButton"/>
    </HBox>
    <ListView fx:id="playlistListView" onMouseClicked="#handlePlaylistClick"/>
</VBox>
